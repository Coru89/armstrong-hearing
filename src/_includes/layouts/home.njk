{% from "macros/macros.njk" import component with context%}

{% extends 'layouts/base.njk' %}

{# Intro content #}
{% set heroHeading = title %}

{# Post list content #}
{# {% set postListHeading = postsHeading %}
{% set postListItems = collections.postFeed %}

{# {% set serviceHeading = serviceHeading %} #}
{% set serviceCardItems = collections.serviceCards %}

{# Archive link #}
{% if postListItems.length < collections.posts.length %}
  {% set paginationNextText = archiveButtonText %}
  {% set paginationNextUrl = '/archive' %}
{% endif %}

{% block content %}
  <main id="main-content" tabindex="-1">
      {{ component('hero', {
        heroHeading: title,
        heroSummary: bannerSummary,
        heroImage: bannerImage
      }) }}

      {{ component('service-roll-up', {
        serviceHeading: serviceHeading,
        buttonText: serviceButtonText,
        buttonPath: serviceButtonPath,
        serviceCardItems: serviceCardItems
      }) }}

      {{ component('image-text-panel', {
        title: panelTitle1,
        summary: panelSummary1,
        buttonText: panelButtonText1,
        buttonPath: panelButtonPath1,
        imageURL: panelImage1,
        imageAlt: panelImageDescription1,
        imagePosition: panelImagePosition1
      }) }}

      {{ component('image-text-panel', {
        title: panelTitle2,
        summary: panelSummary2,
        buttonText: panelButtonText2,
        buttonPath: panelButtonPath2,
        imageURL: panelImage2,
        imageAlt: panelImageDescription2,
        imagePosition: panelImagePosition2
      }) }}

  </main>
{% endblock %}