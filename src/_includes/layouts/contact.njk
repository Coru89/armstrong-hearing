{% extends 'layouts/base.njk' %}
{% from "macros/macros.njk" import component %}

{# Intro content #}
{% set introHeading = title %}

{% block content %}

<main id="main-content" tabindex="-1">
  {{ component('hero', {
    heroHeading: title,
    heroSummary: bannerSummary,
    heroImage: bannerImage
  }) }}
  <div class="contact__body">
    {{ content | safe }}
    <div class="contact__row">
      <h3>Have a question?</h3>
      {% include "partials/components/contact-form.njk" %}
    </div>
    <div class="contact__row">
      <iframe 
        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2745.6125335600746!2d-84.33522004847919!3d46.51577967057751!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x4d3639cb7caf28e1%3A0x7f8ef923a3b933dd!2sArmstrong%20Hearing!5e0!3m2!1sen!2sth!4v1646294992953!5m2!1sen!2sth"
        width="600"
        height="450"
        style="max-width: 100%; max-height: 100%; border: 0;"
        allowfullscreen=""
        loading="lazy"
      >
      </iframe>
      <address>
        {{ address | safe }}
      </address>

      <div class="contact__column contact__column--bleed">
        <div class="contact__items">
        <h3>Contact info</h3>
          <label class="contact__phone">Phone: <a href="tel:{{phone}}">{{phoneDisplay}}</a></label>
          <label class="contact__fax">Fax: <span>{{fax}}</span></label>
          <label class="contact__email">Email: <a href="mailto:{{email}}">{{email}}</a></label>
        </div>
        <div class="contact__hours">
          <h3>Hours of operation</h3>
          <div>Monday to Thursday from 8:00am to 5:00pm</div>
          <div>Fridays from 8:00am to 4:00pm</div>
          <div>Will take appointments outside regular hours for special requests</div>
        </div>
      </div>
    </div>
  </div>
</main>
{% endblock %}

{{ content | safe }}