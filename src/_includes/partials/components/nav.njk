{% if navigation.items %}
  <nav class="nav" aria-label="{{ariaLabel}}">
    <button class="nav__button" id="nav" aria-label="toggle navigation menu">
      {% svg "nav" %}
      {% svg "close" %}
    </button>
    <div class="nav__wrapper">
      <ul class="nav__list">
        {% for item in navigation.items %}
          {% set relAttribute = '' %}
          {% set currentAttribute = '' %}
          {% set currentClass = '' %}

          {% if item.rel %}
            {% set relAttribute = ' rel="' + item.rel + '"' %}
          {% endif %}

          {% if page.url == (item.url + '/') %}
            {% set currentAttribute = ' aria-current="page"' %}
            {% set currentClass = 'nav__item--active' %}
          {% endif %}
          <li class="nav__item {{ currentClass | safe }}">
            <a class="nav__item-link" href="{{ item.url }}"{{ relAttribute | safe }}{{ currentAttribute | safe }}>{{ item.text }}
              {% if item.items %}
                {% svg "arrow" %}
              {% endif %}
            </a>
            {% if item.items %}
              <ul class="nav__sublist">
                {% for item in item.items %}
                  {% set relAttribute = '' %}
                  {% set currentAttribute = '' %}
                  {% set currentClass = '' %}

                  {% if item.rel %}
                    {% set relAttribute = ' rel="' + item.rel + '"' %}
                  {% endif %}

                  {% if page.url == (item.url + '/') %}
                    {% set currentAttribute = ' aria-current="page"' %}
                    {% set currentClass = 'nav__item--active' %}
                  {% endif %}

                  <li class="nav__item nav__item-secondary {{ currentClass | safe }}">
                    <a href="{{ item.url }}"{{ relAttribute | safe }}{{ currentAttribute | safe }}>{{ item.text }}</a>
                  </li>
                {% endfor %}
              </ul>
            {% endif %}
          </li>
        {% endfor %}
        {% from "macros/macros.njk" import button_link %}
      </ul>
        <div class="nav__secondary">
          <div class="nav__contact">
          {{ button_link("Contact", "/contact", true) }}
          </div>
          {# <div class="nav__theme">
              <theme-toggle></theme-toggle>
            </div> #}
          {% include "partials/components/social-icons.njk" %}
        </div>
    </div>
  </nav>
{% endif %}