{% if props.backgroundColor === 'white' %}
  {% set colorHexPanel = 'var(--color-white)' %}
    {% set colorHexCard = 'transparent' %}
{% elseif props.backgroundColor === 'grey' %}
    {% set colorHexPanel = 'var(--color-grey-light)' %}
        {% set colorHexCard = 'transparent' %}
{% elseif props.backgroundColor === 'green' %}
  {% set colorHexPanel = 'var(--color-theme-primary)' %}
  {% set colorHexCard = 'var(--color-white)' %}
{% else %}
    {% set colorHexPanel = 'var(--color-white)' %}
    {% set colorHexCard = 'transparent' %}
{% endif %}

{% if props.cards.length %}
  <section class="cards-icon-roll-up">
    <div class="cards-icon-roll-up__inner" style="background-color: {{colorHex}};">
      <h2 class="cards-icon-roll-up__heading">{{ props.heading }}</h2>
      <div class="cards-icon-roll-up__items" reversed>
        {% for item in props.cards %}
          <a href="{{ item.linkPath }}" class="cards-icon-roll-up__link" rel="bookmark">
            <div class="cards-icon-roll-up__item">
              {% if item.icon %}
                {% svg item.icon %}
              {% endif %}
              <div class="cards-icon-roll-up__item-title">
                {{ item.title }}
              </div>
                <div class="cards-icon-roll-up__summary">{{ item.summary }}</div>
            </div>
          </a>
        {% endfor %}
      </div>
      {% from "macros/macros.njk" import button_link %}
      {% if props.buttonText and props.buttonPath %}
        {{ button_link(props.buttonText, props.buttonPath, true) }}
      {% endif %}
    </div>
  </section>
{% endif %}
